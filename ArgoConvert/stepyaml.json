{
  "namespace": "argo",
  "serverDryRun": false,
  "workflow": {
    "metadata": {
      "name": "act2"

    },
    "spec": {
      "entrypoint": "hello-hello-hello",
      "templates": [
        {
          "name": "hello-hello-hello",
          "steps": [
            [
              {
                "name": "hello1",
                "template": "whalesay",
                "arguments": {
                  "parameters": [
                    {
                      "name": "message",
                      "value": "hello1"
                    }
                  ]
                }
              }
            ],
            [
              {
                "name": "hello2a",
                "template": "whalesay",
                "arguments": {
                  "parameters": [
                    {
                      "name": "message",
                      "value": "hello2a"
                    }
                  ]
                }
              },
              {
                "name": "hello2b",
                "template": "whalesay",
                "arguments": {
                  "parameters": [
                    {
                      "name": "message",
                      "value": "hello2b"
                    }
                  ]
                }
              }
            ],
            [
              {
                "name": "hello32b",
                "template": "whalesay1",
                "arguments": {
                  "parameters": [
                    {
                      "name": "message",
                      "value": "hello32b"
                    }
                  ]
                }
              }
            ]
          ]
        },
        {
          "name": "whalesay",
          "inputs": {
            "parameters": [
              {
                "name": "message"
              }
            ]
          },
          "container": {
            "image": "docker/whalesay",
            "command": ["cowsay"],
            "args": ["{{inputs.parameters.message}}"]
          }
        }

      ]
      
  }
}
}
